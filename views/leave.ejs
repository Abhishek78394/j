<%- include('./partials/usersidebar')%>
<main id="main" class="content-wrapper">
  <h4 class="d-flex justify-content-evenly"><p class="p-1">subbmit fro leave </p>
 </h4>
  <div class="container-fluid pt-3">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <form action="/leave/<%= id%>" method="POST">
              
              <div class="form-group">
                <label for="date">date:</label>
                <input
                  class="form-control"
                  id="date"
                  placeholder="Enter your date"
                  name="date"
                  min="1"
                  max="31"
                  type="date"
                />
              </div>
              <div class="form-group">
                <label for="reason">reason:</label>
                <input
                  class="form-control"
                  id="reason"
                  placeholder="Enter your reason"
                  name="reason"
                  type="text"
                
                />
              </div>
              <button class="btn btn-primary btn-block">submit leave</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
